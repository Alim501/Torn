generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String   @id @default(uuid())
  email String   @unique
  passwordHash String
  privateKey String 
  adress String
}


model Block {
  id                String        @id @map("blockID")
  number            Int
  txTrieRoot        String
  witnessAddress    String
  parentHash        String
  timestamp         DateTime
  witnessSignature  String
  transactions      Transaction[]
}

model Transaction {
  id              String     @id @map("txID")
  block           Block      @relation(fields: [blockId], references: [id])
  blockId         String
  timestamp       DateTime?
  expiration      DateTime?
  contractType    String?
  rawData         Json?
  signature       Json?
}
